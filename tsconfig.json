{
    "compilerOptions": {
      "target": "ES2021",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext",
      ],
      "module": "commonjs",
      "importHelpers": true,
      "declaration": true,
      "sourceMap": true,
      "outDir": "./dist",
      "strict": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "moduleResolution": "node",
      "jsx": "react",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src"
    ],
    "exclude": [
      "dist",
      "node_modules"
    ]
  }
  